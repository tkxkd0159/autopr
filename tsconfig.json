{
  "display": "Node 16",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*"
  ]
}